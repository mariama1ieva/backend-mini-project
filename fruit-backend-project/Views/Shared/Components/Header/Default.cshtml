@model HeaderVM


<!-- Spinner Start -->
<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->
<!-- Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">@Model.Settings["Address"]</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">@Model.Settings["Email"]</a></small>
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a href="index.html" class="navbar-brand"><h1 class="text-primary display-6">@Model.Settings["WebName"]</h1></a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a asp-action ="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                    <a asp-action="Index" asp-controller="Shop" class="nav-item nav-link">Shop</a>
                
                    <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link">Contact</a>

                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                    <a asp-action="Index" asp-controller="Basket" class="position-relative me-4 my-auto">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                        <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1 basket-count" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">@Model.BasketCount</span>
                    </a>
                    <a asp-action="Login" asp-controller="Account" class="my-auto">
                        <i class="fas fa-user fa-2x"></i>
                    </a> 
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div class="position-relative">
                            <h6 class=" mt-2 mx-3">@User.Identity.Name</h6>
                            <a asp-action="Logout" asp-controller="Account" style="margin-top:-12px;" class=" position-absolute mx-3">Log Out</a>

                        </div>
                    }
                    else
                    {
                        <div class="position-relative">
                        <a asp-action="Login" asp-controller="Account"  class=" position-absolute mx-3">LogIn</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->