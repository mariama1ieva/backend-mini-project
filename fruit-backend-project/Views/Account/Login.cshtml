@model LoginVM
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center" style="color:forestgreen">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body mt-3">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <p class="text-center">Sing in</p>
                                <form class="pt-3" method="post" asp-action="Login">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input asp-for="UserNameOrEmail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                        <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                                    </div>


                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input asp-for="Password" class="form-control" id="exampleInputPassword1">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>

                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted ">
                                                <input type="checkbox" class="form-check-input">  Keep me signed in
                                            </label>
                                        </div>
                                        <a href="#" class="auth-link text-black">Forgot password?</a>
                                    </div>

                                    <button type="submit" class="btn btn-success">Submit</button>

                                    <div class="text-center mt-4 font-weight-light">
                                        Don't have an account? <a asp-action="Register" asp-controller="Account" class="text-primary">Create</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
