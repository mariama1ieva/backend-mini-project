﻿
@model SliderEditVM


<div class="container">
    <div class="card mt-4 w-100" style="display:flex;align-items:center;">
        <div>
            <img src="~/img/@Model.Image" style="width:100px" />
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
               

                <label asp-for=Name class="form-label">Name</label>
                <input asp-for=Name type="text" class="form-control" placeholder="add..." maxlength="120">

                <label class="mt-4">Photo</label>
                <input asp-for="Photo" class="form-control">
             
                <button type="submit" class="btn btn-success mt-5">Submit</button>
                <a asp-action="Index"  asp-controller="Slider" class="btn btn-info mt-5">Cancel</a>
            </form>
        </div>
    </div>

</div>